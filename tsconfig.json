{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "noUncheckedIndexedAccess": false,
    "sourceMap": true,
    "types": [
      "webpack-env",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "es2018.promise", "es2021"]
  },
  "include": [
    "src/assets/*.ts",
  ],
  "exclude": ["node_modules"],
  "allowJs": true,
  "declaration": false
}